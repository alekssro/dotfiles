[user]
	name = alekssro
	email = alejandro.roca@feverup.com

[alias]
	bigbang = checkout --orphan
	remotes = remote -v
	set-to-remote = "!f() { git fetch && git reset --hard FETCH_HEAD; }; f"
	unchange = update-index --assume-unchanged
	shallow = "!f() { printf 'Enter to continue '; read _; git pull --depth 1; git gc --prune=all; }; f"

[color]
	ui = true

[init]
	templateDir = ~/.config/git/template/

[push]
	default = simple

[core]
	pager = less -FR -S -x1,5
	whitespace = blank-at-eol,space-before-tab

[help]
	autocorrect = 1

[blame]
	coloring = repeatedLines

[pager]
	diff = less -FR -x1,5
	show = less -FR -x1,5
	log = less -FR -x1,5
	branch = false

[reset]
	quiet = true
[credential]
	helper = cache
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
